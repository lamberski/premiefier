<script id="search-template" type="x-handlebars-template">
  {% raw %}
    <form method="get" action="api/movies" class="form">
      <fieldset>
        <input type="text" name="title" placeholder="Enter movie title" value="{{params.title}}" autofocus>
        <button type="submit" data-primary="Search" data-processing="Searching&hellip;">Search</button>
      </fieldset>
      {{#if error}}
        <p class="form__error">{{error}}</p>
      {{/if}}
    </form>
  {% endraw %}
</script>
