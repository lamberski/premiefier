{% extends "layout.twig" %}

{% block content %}
  <div id="unsubscribe-container"></div>
  <div id="movies-container"></div>
{% endblock %}

{% block templates %}
  {{ parent() }}
  <script id="unsubscribe-template" type="x-handlebars-template">
    {% raw %}
      <form method="post" action="/api/unsubscribe" id="unsubscribe" class="form">
        <fieldset>
          <input type="email" name="email" placeholder="Enter your email address" value="{{email}}" autofocus>
          <input type="submit" value="Show movies">
        </fieldset>
        <p class="hint">Enter your email address to list all movie premieres you&appos;re subscribed to.</p>
      </form>
    {% endraw %}
  </script>
{% endblock %}
