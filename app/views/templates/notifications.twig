<script id="notifications-template" type="x-handlebars-template">
  {% raw %}
    {{#if notifications}}
      <hr>

      <section>
        {{#each notifications as |notification notificationId|}}
          <article class="notification">
            <img src="{{notification.premiere.poster_url}}" alt="">
            <div class="notification__details">
              <h1>{{notification.premiere.title}}</h1>
              <p class="movie__release-date">
                Will be released on <time>{{notification.premiere.released_at}}</time>.
              </p>
              <form method="delete" action="api/notifications" class="form">
                <input type="hidden" name="notification_id" value="{{notification.id}}">
                <input type="submit" value="Unsubscribe" data-primary="Unsubscribe" data-secondary="Subscribe" data-processing="Processing&hellip;">
              </form>
            </div>
          </article>
        {{/each}}
      </section>
    {{else}}
      {{#unless error}}
        <section class="text">
          <p><strong>Empty list</strong>. There are no notifications for your email address.</p>
        </section>
      {{/unless}}
    {{/if}}
  {% endraw %}
</script>
